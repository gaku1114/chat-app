<div class="main-chat_header">
  <div class="left-header">
    <div class="chat-name">hogefuga</div>
  </div>
  <div class="right-header">
    <div class="chat-exit">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="message-top">
      <div class="message-user">Tom</div>
      <div class="message-date">20203/31（Wed）12:43:40</div>
    </div>
    <div class="message-bottom">
      <div class="message-content">おはよう</div>
    </div>
  </div>
  <div class="message">
    <div class="message-top">
      <div class="message-name">Sim</div>
      <div class="message-date">20203/31（Wed）12:45:20</div>
    </div>
    <div class="message-bottom">
      <div class="message-content">おはようございます</div>
    </div>
  </div>
</div>


<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>